<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/broadcast"
        android:layout_width="201dp"
        android:layout_height="67dp"
        android:onClick="broadcast"
        android:text="braodcast_eddyurl"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.141" />

    <EditText
        android:id="@+id/mobileno"
        android:layout_width="261dp"
        android:layout_height="56dp"
        android:ems="10"
        android:hint="Registered Mobile No."
        android:inputType="number"
        app:layout_constraintBottom_toTopOf="@+id/broadcast"
        app:layout_constraintEnd_toEndOf="@+id/broadcast"
        app:layout_constraintHorizontal_bias="0.516"
        app:layout_constraintStart_toStartOf="@+id/broadcast"
        />

    <Button
        android:id="@+id/create_ibeacon"
        android:layout_width="173dp"
        android:layout_height="75dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="54dp"
        android:layout_marginEnd="155dp"
        android:layout_marginBottom="107dp"
        android:onClick="create_ibeacon"
        android:text="create_ibeacon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/uuids" />

    <TextView
        android:id="@+id/uuids"
        android:layout_width="261dp"
        android:layout_height="164dp"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/create_ibeacon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/broadcast" />


</androidx.constraintlayout.widget.ConstraintLayout>